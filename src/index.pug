include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      //- .maincontent
      //-   +image('content/user.jpg', 'user-pic')
      //-   +icon('link', 'link-class')
      //-   .icon-bg
      .welcome-section
        .train-bg
          section.hero
            +image('content/TrainBridge.png', 'parallax parallax_sky')
            +image('content/TrainBridge(1).png', 'parallax parallax_hill')
            +image('content/TrainBridge(2).png', 'parallax parallax_train')
            +image('content/TrainBridge(3).png', 'parallax parallax_ground')
            .container.hero-container
              header.header
                .header__logo
                  .logo СР
                .header__btns
                  nav.menu
                    - var items = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
                    ul.menu__list
                      each item in items
                        li.menu__item
                          a.menu__link #{item}
                .header__links
                  - var icons = ['insta', 'vk', 'github']
                    ul.socials
                      each item in icons
                        li.socials__item
                          a(href="#").socials__link
                           +icon(item, 'socials__icon')
                .hamburger-menu
                    +image('content/hamburgerMenu.png', 'hamburger-pic')
              .hero__content
                .user-data
                  .user-data__desc Личнай сайт<br/>веб разработчика
                  h1.user-data__name Сергей<br/>Руднев


              a(href="#").hero__bottom-btn.scroll-down-btn Скролл

          section.about-section
            .container
              .about
                .about__user-data
                  .user-info
                    .user-info__avatar
                      .avatar
                        +image('content/user.jpg', 'avatar__img')
                  .user-info__content
                    -
                      var userdata = [
                        ['Проживаю:', 'Москва'],
                        ['Возраст:', '30 лет'],
                        ['Родился:', '27 февраля 1990']
                      ];
                    table.user-info__data
                      tbody.user-info__data-body
                      each row in userdata
                        tr
                          td #{row[0]}
                          td #{row[1]}

                .about__content
                  .about__disclamer Привет, меня зовут
                  h2.about__title Сергей Руднев
                  .about__desc
                    p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                  .about__ps
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

          section.values-section
            .container
              +image('content/arms.png', 'arms-pic')
              .values__title
                .values-section__title-content
                  .longtitle
                    h2.longtitle__text Чем я могу быть полезен вам
                    .longtitle__desc
                      p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

              #skills-component
        
        section.works-section
          .container.works-container
            h2.works-title Мои работы
            #slider-component
        
        .foliage-bg
          #reviews-component

          section.contact-section
            .container
              .contact-section__form
                h2.contact-section__title Связаться со мной
                form.contact              
                  .contact__row
                    label.contact__block
                      .contact__title Введите ваше имя                      
                      input.contact__input.contact__input-user(type="text", name="name", required, placeholder="Руднев Сергей")
                      .error
                    label.contact__block.contact__block-right
                      .contact__title Введите ваш email
                      input.contact__input.contact__input-envelope(type="text", name="name", required, placeholder="loftschool@study.com")
                      .error
                      
                  .contact__row
                    label.contact__block
                      .contact__title Сообщение к письму
                      textarea.contact__input.contact__input-chat.contact__input--textarea(name="comment", required, placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса")
                      .error
                  .contact__button
                    button.contact__btn.btn(type="submit", name="send") Отправить

        footer.footer
          .container
            .footer-content
              .footer-content__left
                .footer-content__year 2019
                .footer-content__data
                  h1.footer-content__name Сергей Руднев                
                  .footer-content__desc Личнай сайт веб разработчика
              .footer-content__right
                .footer-content__btns
                  nav.menu
                    - var items = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться'];
                    ul.menu__list
                      each item in items
                        li.menu__item
                          a.menu__link.menu__link-footer #{item}
                .footer-data
                  .footer-data__left
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                    .footer-data__links
                      - var icons = ['insta', 'vk', 'github']
                        ul.socials
                          each item in icons
                            li.socials__item.socials__item-footer
                              a(href="#").socials__link.socials__link-footer
                                +icon(item, 'socials__icon')
                  .footer-data__right
                    p.footer-data__quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                    .footer-data__author Martin Golding

    include ./templates/entry.pug
                  
                  

