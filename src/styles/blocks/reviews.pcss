.reviews-section {
  color: #fff;
  position: relative;
  padding-top: 140px;

  .reviews-section__sheet {
    position: absolute;
    right: -230px;
    top: -200px;

    @include phones {
      top: -85px;
    }
  }
}

.reviews-container__title {
  position: relative;
  margin-left: 9%;
  margin-bottom: 95px;

  @include desktop {
    margin-left: 2.5%;
  }
}

.reviews-title {
  line-height: 48px;
  font-family: "Open Sans";
  font-weight: 700;
  font-size: 36px;

  @include phones {
    font-size: 26px;
  }
}

.reviews__user-avatar {
  width: 80px;
  height: 80px;
}

.reviews-slider {
  margin-left: 9%;
  width: 60%;

  @include desktop {
    margin-left: 0;
    width: 88%;
  }

  @include phones {
    width: 100%;
  }

  .reviews-slider__item {
    display: flex;
    justify-content: space-between;
    width: 50%;
    flex-direction: column;
    padding-left: 130px;

    @include tablets {
      padding-left: 50px;
    }

    @include phones {
      width: initial;
    }
  }

  
}

