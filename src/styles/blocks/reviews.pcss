.reviews__user-data {
  display: flex;
  align-items: center;
}

.reviews__desc {
  position: relative;
  line-height: 30px;
  font-family: "Open Sans";
  font-weight: 600;
  font-size: 16px;
  margin-bottom: 15px;
  color: #716d69;

  &::before {
    content: "";
    position: absolute;
    right: 100%;
    opacity: 0.3;
    display: block;
    height: 63px;
    width: 75px;
    margin-right: 20px;
    background: svg-load('quote.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
  
  @include tablets {
    width: 30px;
    height: 26px;
  }
  }
}

.reviews__user-name {
  font-family: "Open Sans";
  font-weight: 700;
  font-size: 18px;
  color: #fff;
  margin-bottom: 10px;
}

.reviews__user-info {
  font-size: 16px;
  font-family: "Open Sans";
  font-weight: 600;
  margin-left: 20px;
  color: #716d69;
}